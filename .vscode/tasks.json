    "version": "2.0.0",
    "tasks": [
        {
            "label": "run_profiling_test",
            "isTestCommand": true,
            "command": "python",
            "echoCommand": true,
            "args": [
                "-m",
                "pytest",
                "${workspaceRoot}/server/tests/test_Gloomhaven.py"
            ],
            "options": {
                "env": {
                    "PYTEST_ADDOPTS" : "-n4 -rP --profile"
                }
            }
        }
    ]
}